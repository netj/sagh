#!/usr/bin/env python

#assumes final score dictionary 'a' 'b' 5 and 'b' 'a' 4 (both directions specified)

import pickle
import operator
import sys,os
from collections import defaultdict
import sagh

'''
d = {}
d[('a','a')] = 1
d[('a','b')] = 0.1
d[('a','c')] = 0.4
d[('a','d')] = 0.6
d[('a','e')] = 0.2
d[('b','a')] = 0.8
d[('b','b')] = 1
d[('b','c')] = 0.4
d[('b','d')] = 0.3
d[('b','e')] = 0.5
d[('c','a')] = 0.5
d[('c','b')] = 0.1
d[('c','c')] = 1
d[('c','d')] = 0.3
d[('c','e')] = 0.4
d[('d','a')] = 0.7
d[('d','b')] = 0.1
d[('d','c')] = 0.4
d[('d','d')] = 1
d[('d','e')] = 0.2
d[('e','a')] = 0.2 
d[('e','b')] = 0.1
d[('e','c')] = 0.4
d[('e','d')] = 0.3
d[('e','e')] = 1
file = open('log.txt','w')
pickle.dump(d,file)
