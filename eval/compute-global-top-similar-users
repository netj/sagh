#!/usr/bin/env python

#assumes final score dictionary 'a' 'b' 5 and 'b' 'a' 4 (both directions specified)

import pickle
import operator
import sys
from collections import defaultdict
import sagh

'''
d = {}
d[('a','a')] = 1
d[('a','b')] = 0.1
d[('a','c')] = 0.4
d[('a','d')] = 0.6
d[('a','e')] = 0.2
d[('b','a')] = 0.8
d[('b','b')] = 1
d[('b','c')] = 0.4
d[('b','d')] = 0.3
d[('b','e')] = 0.5
